{% extends "/layout.jinja2" %}

{% block title %}Opendoor Scramble{% endblock title %}

{% block content %}
    <div ng-controller="ScrambleController" id="main">
        <board word="word" on-complete="onComplete()"></board>
        <section id="result">
            <h1 class="correct icon ng-invisible" ng-visible="isCorrect">&#x1f44d;</h1>
        </section>
    </div>
{% endblock content %}
